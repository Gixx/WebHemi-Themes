{% extends "admin/administration/index.twig" %}

{% block header %}
    <div class="mdl-layout__header-row">
        <button class="mdl-button mdl-js-button mdl-button--icon" onclick="location.href='administration/resources'">
            <i class="material-icons">arrow_back</i>
        </button>
        <div class="title-wrapper">
            <span class="mdl-layout-title">User: "{{ data.user.displayName }}"</span>
        </div>
    </div>
    <!-- Tabs -->
    <div class="mdl-layout__tab-bar mdl-js-ripple-effect">
        <a href="#scroll-tab-1" class="mdl-layout__tab is-active">User data</a>
        <a href="#scroll-tab-2" class="mdl-layout__tab">Meta data</a>
        <a href="#scroll-tab-3" class="mdl-layout__tab">Groups</a>
        <a href="#scroll-tab-4" class="mdl-layout__tab">Policies</a>
    </div>
{% endblock %}

{% block content %}
    <section class="mdl-layout__tab-panel is-active" id="scroll-tab-1">
        <div class="page-content">
            <div class="mdl-grid">
                <div class="mdl-cell mdl-cell--12-col mdl-cell--4-col-phone mdl-cell--8-col-tablet full-width">
                    <h4>Basic information</h4>
                </div>
            </div>
        </div>
    </section>
    <section class="mdl-layout__tab-panel" id="scroll-tab-2">
        <div class="page-content">
            <div class="mdl-grid">
                <div class="mdl-cell mdl-cell--12-col mdl-cell--4-col-phone mdl-cell--8-col-tablet full-width">
                    <h4>Personal information</h4>
                </div>
            </div>
        </div>
    </section>
    <section class="mdl-layout__tab-panel" id="scroll-tab-3">
        <div class="page-content">
            <div class="mdl-grid">
                <div class="mdl-cell mdl-cell--12-col mdl-cell--4-col-phone mdl-cell--8-col-tablet full-width">
                    <h4>Assigned groups</h4>
                </div>
            </div>
        </div>
    </section>
    <section class="mdl-layout__tab-panel" id="scroll-tab-4">
        <div class="page-content">
            <div class="mdl-grid">
                <div class="mdl-cell mdl-cell--12-col mdl-cell--4-col-phone mdl-cell--8-col-tablet full-width">
                    <h4>Assigned policies</h4>
                </div>
            </div>
        </div>
    </section>
{% endblock %}
