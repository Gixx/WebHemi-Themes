{% extends "admin/administration/index.twig" %}

{% block header %}
    <div class="mdl-layout__header-row">
        <button class="mdl-button mdl-js-button mdl-button--icon" onclick="location.href='administration/groups'">
            <i class="material-icons">arrow_back</i>
        </button>
        <div class="title-wrapper">
            <span class="mdl-layout-title">Group: "{{ data.group.Title }}"</span>
        </div>
    </div>
{% endblock %}

{% block content %}
    <div class="mdl-grid">
        <div class="mdl-cell mdl-cell--12-col mdl-cell--4-col-phone mdl-cell--8-col-tablet full-width">
            <div id="tablecontent">
                <table summary="User group data" class="mdl-data-table mdl-js-data-table mdl-shadow--2dp">
                    <thead>
                    <tr>
                        <th class="mdl-data-table__cell--non-numeric">Key</th>
                        <th class="mdl-data-table__cell--non-numeric">Value</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for key,value in data.group %}
                        <tr>
                            <td class="mdl-data-table__cell--non-numeric"><nobr>{{ key }}</nobr></td>
                            <td class="mdl-data-table__cell--non-numeric longtext"><nobr>{{ value }}</nobr></td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
            {% if not data.readonly %}
                <button class="edit-item mdl-button mdl-js-button mdl-button--fab mdl-js-ripple-effect mdl-button--colored" onclick="location.href='administration/groups/edit/{{ data.group.Id }}'">
                    <i class="material-icons">mode_edit</i>
                </button>
            {% endif %}
        </div>
    </div>
{% endblock %}
