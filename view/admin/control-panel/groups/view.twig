{% extends "admin/control-panel/index.twig" %}

{% block header %}
    <div class="mdl-layout__header-row">
        <button class="mdl-button mdl-js-button mdl-button--icon" onclick="location.href='control-panel/groups'">
            <i class="material-icons">keyboard_arrow_left</i>
        </button>
        <div class="title-wrapper">
            <span class="mdl-layout-title">Group: "{{ data.group.Title }}"</span>
        </div>
    </div>
{% endblock %}

{% block content %}
    <div class="mdl-grid">
        <table summary="User group data" class="mdl-color--white mdl-shadow--2dp mdl-cell mdl-cell--12-col mdl-data-table mdl-js-data-table key-value-table">
            <thead>
            <tr>
                <th class="mdl-data-table__cell--non-numeric">Key</th>
                <th class="mdl-data-table__cell--non-numeric">Value</th>
            </tr>
            </thead>
            <tbody>
            {% for key,value in data.group %}
                <tr>
                    <td class="mdl-data-table__cell--non-numeric"><nobr>{{ key }}</nobr></td>
                    <td class="mdl-data-table__cell--non-numeric longtext">{{ value }}</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
        {% if not data.readonly %}
            <button class="edit-item mdl-button mdl-js-button mdl-button--fab mdl-js-ripple-effect mdl-button--colored" onclick="location.href='control-panel/groups/edit/{{ data.group.Id }}'">
                <i class="material-icons">mode_edit</i>
            </button>
        {% endif %}
    </div>
{% endblock %}
