{% block content %}
    <section class="post">
        <article>
            <header>
                <h1>{{ 'Error 401: Unauthorized'|t }}</h1>
            </header>

            {% set websiteLink = '<a href="http://' ~ application.domain ~ '">' ~ application.domain ~ '</a>' %}
            <div class="body">
                {{ '<p>You have attempted to access a page for which you are not authorized. This page will automatically redirect to the %s Home Page in 10 seconds or click the following link to manually redirect this page to %s.</p>'|t(application.domain, websiteLink)|raw }}
