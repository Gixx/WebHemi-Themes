{% extends selected_module == 'Admin' ? 'admin-layout.twig' : 'layout.twig' %}

{% block title %}Error 401: Unauthorized {% if selected_module == 'Admin' %} - {{ site_title|default('Thomas Admin') }}{% endif %}{% endblock %}

{% block header %}
    <div class="mdl-layout__header-row">
        <button class="mdl-button mdl-js-button mdl-button--icon" onclick="location.href=history.back()">
            <i class="material-icons">keyboard_arrow_left</i>
        </button>
        <span class="mdl-layout-title">Error 401</span>
    </div>
{% endblock %}

{% block content %}
    <div class="mdl-grid">
        <div class="mdl-color--white mdl-shadow--2dp mdl-cell mdl-cell--12-col">
            <h3 class="page-header">Unauthorized!</h3>
            <p>
                <a href="auth/login">Login here!</a>
            </p>
        </div>
    </div>
{% endblock %}
