{% extends "layout.twig" %}

{% block title %}{{ blogPost.title }} - {{ parent() }}{% endblock %}

{% block header %}
    <div class="mdl-layout__header-row">
        <span class="mdl-layout-title"><a href="" class="thomas">Thomas von FÃ¼rstenfeld</a> - {{ blogPost.title }}</span>
    </div>
{% endblock %}

{% block menu %}
    {% set activeMenu = 'posts' %}
    {{ parent() }}
{% endblock %}

{% block content %}
<div class="mdl-grid-x">
    <section>
        <article>
            <div class="mdl-color--white mdl-shadow--2dp mdl-cell mdl-cell--12-col">
                <header>
                    <h1 class="page-header">{{ blogPost.title }}</h1>
                    <p>On {{ blogPost.publishedAt.format('Y-m-d') }} by {{ blogPost.author.name }}</p>
                </header>
                <p>{{ blogPost.content|markdown }}</p>
                <p>Parameter: {{ blogPost.parameter.id }}</p>
            </div>
        </article>
    </section>
</div>
{% endblock %}
