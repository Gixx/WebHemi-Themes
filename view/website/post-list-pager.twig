{% extends "layout.twig" %}

{% block title %}{{ parent() }} - Posts{% endblock %}

{% block header %}
    <div class="mdl-layout__header-row">
        <span class="mdl-layout-title"><a href="" class="thomas">Thomas von FÃ¼rstenfeld</a> - Posts</span>
    </div>
{% endblock %}

{% block menu %}
    {% set activeMenu = 'posts' %}
    {{ parent() }}
{% endblock %}

{% block content %}
<div class="mdl-grid-x">
    {% if blogPosts|length == 5 %}
        {% set style = 'five' %}
    {% elseif blogPosts|length == 4 %}
        {% set style = 'four' %}
    {% elseif blogPosts|length == 3 %}
        {% set style = 'three' %}
    {% elseif blogPosts|length == 2 %}
        {% set style = 'two' %}
    {% elseif blogPosts|length == 1 %}
        {% set style = 'one' %}
    {% endif %}
    <section id="swipe-pager" class="list {{ style }}">
    {% for blogPost in blogPosts %}
        <article>
            <div class="mdl-color--white mdl-shadow--2dp mdl-cell mdl-cell--12-col">
                <header>
                    <h1><a href="posts/view/{{ blogPost.slug|url_encode }}">{{ blogPost.title }}</a></h1>
                    <p>On {{ blogPost.publishedAt.format('Y-m-d') }} by {{ blogPost.author.name }}</p>
                </header>
                <p>{{ blogPost.content }}</p>
            </div>
        </article>
    {% endfor %}
    </section>
    {% if blogPosts|length > 1 %}
    <div class="pager left"><a href="#previous"><i class="material-icons" role="presentation">navigate_before</i></a></div>
    <div class="pager right"><a href="#next"><i class="material-icons" role="presentation">navigate_next</i></a></div>
    {% endif %}
</div>
{% endblock %}
