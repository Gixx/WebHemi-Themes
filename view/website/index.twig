{% extends "layout.twig" %}
{% import '@WebHemi/macros/renderForm.twig' as _FORM %}

{% block content %}
<div class="mdl-grid-x">
    <section id="swipe-pager" class="list five">
        <article>
            <div class="mdl-color--white mdl-shadow--2dp mdl-cell mdl-cell--12-col">
                <h1>Welcome!</h1>
                <a href="posts">Post list</a>
                <hr>
                {{ _FORM.renderForm(form) }}
                <hr>
                POST DATA: {{ dump(data) }}
            </div>
        </article>
        {% include "website/article.twig" with {'index': 1} %}
        {% include "website/article.twig" with {'index': 2} %}
        {% include "website/article.twig" with {'index': 3} %}
        {% include "website/article.twig" with {'index': 4} %}
    </section>
    <div class="pager left"><a href="#previous"><i class="material-icons" role="presentation">navigate_before</i></a></div>
    <div class="pager right"><a href="#next"><i class="material-icons" role="presentation">navigate_next</i></a></div>
</div>
{% endblock %}
